//exemplo vetores

#include<stdio.h>
#include<math.h>
//vetores p1
// char nome[50];
int main() {
	char letras[50];
	int cont = 0, i;
	for(i = 97; i<=122; i++){
		letras[cont] = i;
		cont = cont + 1;	
	}
	for(i = 0; i < 26; i++){
		printf("%d == %c\n", letras[i], letras[i]);
	}
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

#include<stdio.h>
#include<math.h>
//vetores p1
// num inteiros e num reais
int main() {
	int numeros[7], i;//0...6
	numeros[0] = 2;
	numeros[1] = 4;
	numeros[2] = 6;
	numeros[3] = 8;
	numeros[4] = 10;
	numeros[5] = 12;
	numeros[6] =  14;
	
	float valores[7];//0..6
	for(i = 0; i < 7; i++){
		valores[i] = (float)numeros[i] / (float)3;
	}
	for(i = 0; i <= 6; i++){
		printf("%.2f\n", valores[i]);
	}
	return 0;
}
