#include<stdio.h>
#include<math.h>
#include<stdlib.h>
int main(){
	int tempo;
	float salario;
	printf("Digite o salario e o tempo de empresa do funcionario: \n");
	scanf("%f%d", &salario, &tempo);
	if(salario <= 500 && tempo < 1){
		salario = salario * 1.25;
		printf("O novo salario é %.2f", salario);
	}
		else if(salario <= 500 && tempo >= 1 && tempo <= 3){
			salario = (salario * 1.25) + 100;
			printf("O novo salario é %.2f", salario);
